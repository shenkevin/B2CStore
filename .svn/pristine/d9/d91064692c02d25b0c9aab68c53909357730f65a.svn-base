<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.mstar.store.ownee.activity.RegisterActivity">


    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


       <!-- username -->
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_register_username"
                android:layout_width="wrap_content"
                android:text="@string/tv_register_username"
                android:inputType="number"
                android:textColor="@color/maBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_register_username"
                android:layout_width="250dp"
                android:hint="@string/register_username_hint"
                android:background="@color/transparent"
                android:textSize="15sp"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_register_username"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>



        <!-- phone number -->
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_register_phonenumber"
                android:layout_width="wrap_content"
                android:text="@string/phonenumber"
                android:inputType="number"
                android:textColor="@color/maBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_phone_number"
                android:layout_width="250dp"
                android:hint="@string/register_phonenumber_hint"
                android:background="@color/transparent"
                android:textSize="15sp"
                android:text="13128885648"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_register_phonenumber"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>


        <!-- password -->
        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_register_passwd"
                android:layout_width="wrap_content"
                android:text="@string/register_tv_password"
                android:textColor="@color/maBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_register_password"
                android:layout_width="250dp"
                android:hint="@string/register_password_hint"
                android:background="@color/transparent"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_register_passwd"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/iv_makepasswordvisible"
                android:onClick="makepasswordVisible"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_eye"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <!-- 验证码 -->

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:id="@+id/rl_auth"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_register_auth"
                android:layout_width="wrap_content"
                android:text="@string/auth_code"
                android:textColor="@color/maBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ed_register_auth_number"
                android:layout_width="250dp"
                android:hint="@string/auth_code_hint"
                android:background="@color/transparent"
                android:textSize="15sp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_register_auth"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_get_auth_code"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:background="@drawable/register_get_btn"
                android:text="@string/auth_code_get"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/little_red"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <Button
            android:layout_below="@+id/rl_auth"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:text="@string/register"
            android:id="@+id/bt_register_"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:onClick="register"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_background_go"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_noaccount_register"
            android:text="@string/no_account_loginnow"
            android:layout_below="@+id/bt_register_"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/hint_foreground_material_light"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>
