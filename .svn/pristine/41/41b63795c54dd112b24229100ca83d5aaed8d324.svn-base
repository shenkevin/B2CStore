<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_below_menu_ic"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_order_form"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/iv_below_menu_ic"
        android:id="@+id/tv_menu_title"
        android:layout_centerVertical="true"
        android:textColor="@color/maBlack"
        android:layout_width="wrap_content"
        android:text="@string/all_receipts"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_expand_hint"
        android:text="@string/all_receipt"
        android:textColor="@color/gray"
        android:layout_toLeftOf="@+id/iv_btn_expand_pressed"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_btn_expand_pressed"
        android:layout_width="wrap_content"
        android:src="@drawable/btn_expand_pressed"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />


</RelativeLayout>